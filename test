CREATE TABLE wellehaus.welle_ko (
    id INT NOT NULL AUTO_INCREMENT,
    model_name VARCHAR(50) NULL DEFAULT NULL,
    product_name VARCHAR(50) NULL DEFAULT NULL,
    category VARCHAR(20) NULL DEFAULT NULL,
    title VARCHAR(100) NULL DEFAULT NULL,
    sub_title VARCHAR(100) NULL DEFAULT NULL,
    description VARCHAR(2000) NULL DEFAULT NULL,
    shop_url VARCHAR(1000) NULL DEFAULT NULL,
    detail_url VARCHAR(1000) NULL DEFAULT NULL,
    thumbnail_url VARCHAR(1000) NULL DEFAULT NULL,
    priority INT(20) NULL DEFAULT NULL,
    sales INT(20) NULL DEFAULT NULL,
    views INT(20) NULL DEFAULT NULL,
    shares INT(20) NULL DEFAULT NULL,
    likes INT(20) NULL DEFAULT NULL,
    sub_1 VARCHAR(100) NULL DEFAULT NULL,
    sub_2 VARCHAR(100) NULL DEFAULT NULL,
    sub_3 VARCHAR(100) NULL DEFAULT NULL,
    time_stamp TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    release_date VARCHAR(50) NULL DEFAULT NULL,
    price VARCHAR(20) NULL DEFAULT NULL,
    PRIMARY KEY (id)
) ENGINE = InnoDB;

